<UserControl x:Class="CompensationSystemSubInterface.WpfFilterPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    d:DesignHeight="30" d:DesignWidth="400"
    Background="Transparent">
    <UserControl.Resources>
        <!-- 筛选按钮样式 -->
        <Style x:Key="FilterButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#DDD" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10,2" />
            <Setter Property="Margin" Value="0,0,5,0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Height" Value="26" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3"
                            Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{TemplateBinding Content}"
                                    VerticalAlignment="Center" FontSize="12" />
                                <TextBlock Text="▼" Margin="6,0,0,0"
                                    FontSize="8" VerticalAlignment="Center"
                                    Foreground="#999" />
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#1890FF" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="BorderBrush" Value="#1890FF" />
                                <Setter Property="Background" Value="#E6F7FF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 弹出框样式 -->
        <Style x:Key="PopupBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="#DDD" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="3" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2"
                        Opacity="0.2" Direction="270" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TreeViewItem 样式 -->
        <Style TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="True" />
            <Setter Property="Padding" Value="2" />
        </Style>
    </UserControl.Resources>

    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0">
        <!-- 序列按钮 -->
        <ToggleButton x:Name="btnSeq" Content="序列"
            Style="{StaticResource FilterButtonStyle}"
            Checked="btnSeq_Checked" Unchecked="btnSeq_Unchecked" />
        <Popup x:Name="popupSeq" PlacementTarget="{Binding ElementName=btnSeq}"
            Placement="Bottom" HorizontalOffset="0" StaysOpen="False" AllowsTransparency="True"
            Closed="popupSeq_Closed">
            <Border Style="{StaticResource PopupBorderStyle}" MinWidth="200" MaxHeight="300">
                <TreeView x:Name="treeSeq" BorderThickness="0" Background="Transparent">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                    IsThreeState="{Binding IsThreeState}"
                                    Click="SeqCheckBox_Click"
                                    VerticalAlignment="Center" />
                                <TextBlock Text="{Binding DisplayText}"
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    FontWeight="{Binding FontWeight}" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Border>
        </Popup>

        <!-- 部门按钮 -->
        <ToggleButton x:Name="btnDept" Content="部门"
            Style="{StaticResource FilterButtonStyle}"
            Checked="btnDept_Checked" Unchecked="btnDept_Unchecked" />
        <Popup x:Name="popupDept" PlacementTarget="{Binding ElementName=btnDept}"
            Placement="Bottom" HorizontalOffset="0" StaysOpen="False" AllowsTransparency="True"
            Closed="popupDept_Closed">
            <Border Style="{StaticResource PopupBorderStyle}" MinWidth="250" MaxHeight="300">
                <TreeView x:Name="treeDept" BorderThickness="0" Background="Transparent">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                    IsThreeState="{Binding IsThreeState}"
                                    Click="DeptCheckBox_Click"
                                    VerticalAlignment="Center" />
                                <TextBlock Text="{Binding DisplayText}"
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    FontWeight="{Binding FontWeight}" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Border>
        </Popup>

        <!-- 岗位按钮 -->
        <ToggleButton x:Name="btnPost" Content="岗位"
            Style="{StaticResource FilterButtonStyle}"
            Checked="btnPost_Checked" Unchecked="btnPost_Unchecked" />
        <Popup x:Name="popupPost" PlacementTarget="{Binding ElementName=btnPost}"
            Placement="Bottom" HorizontalOffset="0" StaysOpen="False" AllowsTransparency="True"
            Closed="popupPost_Closed">
            <Border Style="{StaticResource PopupBorderStyle}" MinWidth="200" MaxHeight="300">
                <TreeView x:Name="treePost" BorderThickness="0" Background="Transparent">
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                            <StackPanel Orientation="Horizontal" Margin="2">
                                <CheckBox IsChecked="{Binding IsChecked, Mode=TwoWay}"
                                    IsThreeState="{Binding IsThreeState}"
                                    Click="PostCheckBox_Click"
                                    VerticalAlignment="Center" />
                                <TextBlock Text="{Binding DisplayText}"
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    FontWeight="{Binding FontWeight}" />
                            </StackPanel>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Border>
        </Popup>

        <!-- 状态显示 -->
        <TextBlock x:Name="lblStatus" VerticalAlignment="Center"
            Foreground="#666" FontSize="11" Margin="5,0,10,0" />
    </StackPanel>
</UserControl>