<Window x:Class="CompensationSystemSubInterface.WpfEmpAdd"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="新员工入职" Height="770" Width="900"
    WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
    Background="#F5F6F8"
    FontFamily="Microsoft YaHei" FontSize="16">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" BorderBrush="#DDD" BorderThickness="0,0,0,1"
            Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="编号: " FontWeight="Bold" FontSize="14"
                        VerticalAlignment="Center" />
                    <TextBox x:Name="txtEmpNo" Width="150" Margin="5,0,0,0"
                        FontWeight="Bold" Foreground="DarkBlue" FontSize="14"
                        VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="姓名: " FontWeight="Bold" FontSize="14"
                        VerticalAlignment="Center" />
                    <TextBox x:Name="txtNameHeader" Width="150" Margin="5,0,0,0"
                        VerticalAlignment="Center" />
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="部门: " FontWeight="Bold" FontSize="14"
                        VerticalAlignment="Center" />
                    <ComboBox x:Name="cbDeptHeader" Width="180" Margin="5,0,0,0"
                        VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="10">
            <StackPanel>
                <StackPanel.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" Value="Center" />
                        <Setter Property="HorizontalAlignment" Value="Right" />
                        <Setter Property="Margin" Value="0,0,5,0" />
                        <Setter Property="Foreground" Value="#444" />
                    </Style>
                    <Style TargetType="TextBox">
                        <Setter Property="Height" Value="26" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="Margin" Value="0,2" />
                    </Style>
                    <Style TargetType="ComboBox">
                        <Setter Property="Height" Value="26" />
                        <Setter Property="Margin" Value="0,2" />
                    </Style>
                    <Style TargetType="DatePicker">
                        <Setter Property="Height" Value="26" />
                        <Setter Property="Margin" Value="0,2" />
                    </Style>
                </StackPanel.Resources>

                <GroupBox Header="1. 基础身份信息" Margin="0,0,0,10" Padding="10" Background="White"
                    BorderBrush="#CCC">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35" />
                            <RowDefinition Height="35" />
                            <RowDefinition Height="35" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="性别:" Grid.Row="0" Grid.Column="0" />
                        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cbGender" />

                        <TextBlock Text="民族:" Grid.Row="0" Grid.Column="2" />
                        <TextBox Grid.Row="0" Grid.Column="3" x:Name="txtNation" />

                        <TextBlock Text="政治面貌:" Grid.Row="0" Grid.Column="4" />
                        <TextBox Grid.Row="0" Grid.Column="5" x:Name="txtPolitic" />

                        <TextBlock Text="属相:" Grid.Row="1" Grid.Column="0" />
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtZodiac" />

                        <TextBlock Text="年龄:" Grid.Row="1" Grid.Column="2" />
                        <TextBox Grid.Row="1" Grid.Column="3" x:Name="txtAge" />

                        <TextBlock Text="出生日期:" Grid.Row="2" Grid.Column="0" />
                        <DatePicker Grid.Row="2" Grid.Column="1" x:Name="dpBirthday" />

                        <TextBlock Text="证件号码:" Grid.Row="2" Grid.Column="2" />
                        <TextBox Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="3" x:Name="txtIdCard" />
                    </Grid>
                </GroupBox>

                <GroupBox Header="2. 组织与职务信息" Margin="0,0,0,10" Padding="10"
                    Background="#FAFAFA" BorderBrush="#CCC">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35" />
                            <RowDefinition Height="35" />
                            <RowDefinition Height="35" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="序列:" Grid.Row="0" Grid.Column="0" />
                        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cbSequence" />

                        <TextBlock Text="职务:" Grid.Row="0" Grid.Column="2" />
                        <ComboBox Grid.Row="0" Grid.Column="3" x:Name="cbJob" />

                        <TextBlock Text="层级:" Grid.Row="0" Grid.Column="4" />
                        <ComboBox Grid.Row="0" Grid.Column="5" x:Name="cbLevel" />

                        <TextBlock Text="参加工作时间:" Grid.Row="1" Grid.Column="0" />
                        <DatePicker Grid.Row="1" Grid.Column="1" x:Name="dpWorkStart" />

                        <TextBlock Text="入社时间:" Grid.Row="1" Grid.Column="2" />
                        <DatePicker Grid.Row="1" Grid.Column="3" x:Name="dpJoinDate" />

                        <TextBlock Text="任现岗位时间:" Grid.Row="1" Grid.Column="4" />
                        <DatePicker Grid.Row="1" Grid.Column="5" x:Name="dpPostDate" />

                        <TextBlock Text="试用:" Grid.Row="2" Grid.Column="0" />
                        <CheckBox Grid.Row="2" Grid.Column="1" x:Name="cbProbation"
                            VerticalAlignment="Center" />
                    </Grid>
                </GroupBox>

                <GroupBox Header="3. 学历与专业技能" Margin="0,0,0,10" Padding="10" Background="White"
                    BorderBrush="#CCC">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35" />
                            <RowDefinition Height="35" />
                            <RowDefinition Height="35" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="学历:" Grid.Row="0" Grid.Column="0" />
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtEducation" />

                        <TextBlock Text="学位:" Grid.Row="0" Grid.Column="2" />
                        <TextBox Grid.Row="0" Grid.Column="3" x:Name="txtDegree" />

                        <TextBlock Text="专业技术:" Grid.Row="0" Grid.Column="4" />
                        <TextBox Grid.Row="0" Grid.Column="5" x:Name="txtTech" />

                        <TextBlock Text="职称等级:" Grid.Row="1" Grid.Column="0" />
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtTitleLevel" />

                        <TextBlock Text="取得时间:" Grid.Row="1" Grid.Column="2" />
                        <DatePicker Grid.Row="1" Grid.Column="3" x:Name="dpTitleDate" />

                        <TextBlock Text="专业技能:" Grid.Row="1" Grid.Column="4" />
                        <TextBox Grid.Row="1" Grid.Column="5" x:Name="txtSkill" />

                        <TextBlock Text="技能时间:" Grid.Row="2" Grid.Column="0" />
                        <DatePicker Grid.Row="2" Grid.Column="1" x:Name="dpSkillDate" />

                        <TextBlock Text="应届生:" Grid.Row="2" Grid.Column="2" />
                        <CheckBox Grid.Row="2" Grid.Column="3" x:Name="cbFreshGraduate"
                            VerticalAlignment="Center" />
                    </Grid>
                </GroupBox>

                <GroupBox Header="4. 联系与账户" Margin="0,0,0,10" Padding="10" Background="White"
                    BorderBrush="#CCC">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="90" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="联系电话:" Grid.Row="0" Grid.Column="0" />
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtPhone" />

                        <TextBlock Text="工资卡号:" Grid.Row="0" Grid.Column="2" />
                        <TextBox Grid.Row="0" Grid.Column="3" x:Name="txtBankCard" />
                    </Grid>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <Border Grid.Row="2" Background="#EEE" BorderBrush="#CCC" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="8">
                <Button Content="取消" Width="80" Margin="5" Height="30" Click="btnCancel_Click" />
                <Button Content="保存" Width="80" Margin="5" Height="30" Click="btnSave_Click"
                    Background="#007ACC" Foreground="White" FontWeight="Bold" BorderThickness="0" />
            </StackPanel>
        </Border>
    </Grid>
</Window>